{% extends "layout.njk" %}



{%block content%}

<p>
<a href="/" ><img class="backArrow" src="/images/back_arrow.png" alt = "Back Arrow"></a>
</p>

<h1>Select your favorite game for {{myPlatform.name}}</h1>

<ul class="overallLists">
  {%for item in games.games%}
    <li class="myLists">
      <a class="homelist" href=/plateform/{{myPlatform.id}}/games/{{item.id}}>
        {{item.name}}
      </a>
    </li>
  {%endfor%}
</ul>

{% endblock %}
