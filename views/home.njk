{% extends "layout.njk" %}

{%block content%}
<h1>Welcome to the ultimate video-game website</h1>
<h2> Select your favorite gaming platform</h2>

<ul class="overallLists">

{%if deffensivePageNumber > 1%}

  {%for item in platform %}
    <li class="myLists">
      <a class="homelist" href=/platform/{{item.id}}?page={{deffensivePageNumber}}>
      {% if item.logo%}
        <img class="logo" src="{{item.logo.url}}" alt = "Logo video games" >
      {%else%}
        <img class="logo" src="/images/No_Cover.png" alt = "Logo video games undefined" >
      {%endif%}
      {{item.name}}
      </a>
    </li>
  {%endfor%}

{%else%}
  {%for item in platform %}
    <li class="myLists">
      <a class="homelist" href=/platform/{{item.id}}>
      {% if item.logo%}
        <img class="logo" src="{{item.logo.url}}" alt = "Logo video games" >
      {%else%}
        <img class="logo" src="/images/No_Cover.png" alt = "Logo video games undefined" >
      {%endif%}
      {{item.name}}
      </a>
    </li>
  {%endfor%}

{%endif%}
</ul>

<div class="pagination">
  <p>
  {%if deffensivePageNumber > 1%}
    <a href=/?page={{deffensivePageNumber -1}} ><img class="backArrow" src="/images/backward_arrow.png" alt = "Back Arrow"></a>
    <a href=/?page={{deffensivePageNumber +1}} ><img class="backArrow" src="/images/forward_arrow.png" alt = "Forward Arrow"></a>
  {%else%}
    <a href=/?page={{pageNumber-1}} ><img class="backArrow" src="/images/backward_arrow.png" alt = "Back Arrow"></a>
    <a href=/?page={{pageNumber+1}} ><img class="backArrow" src="/images/forward_arrow.png" alt = "Forward Arrow"></a>
  {%endif%}
  </p>
</div>


{% endblock %}
